/* pages/coupon/coupon.wxss */
.redBag{line-height: 35px;font-size: 13px;text-align: center;width: 100%;}
.noCoupon{line-height: 60px;font-size: 12px;text-align: center;color: #cccccc}
.couponItem{width: 90%;height: 60px;margin: 0 auto;padding: 10px 0px;position: relative}
.couponItem .text{width: 70%;height: 60px;background: #E2909C;float:left;border-radius: 2px;position: relative}
.couponItem .text .left_text{position: absolute;top: 10px;left: 13%;font-size: 12px;color:white}
.couponItem .text .left_text .price{color: white;}
.couponItem .text .left_text .allPlace{line-height: 5px;font-size: 11px}
.couponItem .text .left_text .big_text{font-size: 18px}
.couponItem .text .top_round{width:10px;height: 10px;position: absolute;right: -5px;background: white;top:-5px;border-radius: 50%}
.couponItem .text .bottom_round{width:10px;height: 10px;position: absolute;right: -5px;background: white;bottom:-5px;border-radius: 50%}
.couponItem .btn{width: 30%;height: 60px;background: #D76473;float:left;border-radius: 2px;text-align: center;font-size: 12px;
color:white;line-height: 60px}
.couponItem .text .right_text{position: absolute;top: 13px;left: 43%;font-size: 12px;color:white}
.couponItem .text .right_text .full{font-size: 12px}
.couponItem .text .right_text .limit{font-size:11px;}