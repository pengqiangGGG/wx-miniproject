/* pages/good-info/good-info.wxss */
/*@import "../../wxParse/wxParse.wxss"; */
.goods-wrap{padding-bottom: 60px}
.goods-wrap .swiper_wrap .slide-image{width: 100%;height:480px}
.goods-wrap .swiper_wrap swiper{height:320px}
.goods-wrap .goods_title{font-size: 12px;line-height: 28px;}
.goods-wrap .goods_title .send_price{color: gray;display: inline-block;font-size: 10px;}
.goods-wrap .goods_title .sell_num{color: gray;display: inline-block;font-size: 10px;padding-left: 80px}
.goods-wrap .goods_all{padding-left:5px;position: relative;}
.goods-wrap .goods_all .goodsInfo_price{color: red;font-size: 18px;}
.goods-wrap .goods_all .goodsInfo_oldprice{color:grey;font-size: 12px;text-decoration: line-through;margin-left: 10px}
.goods-wrap .goods_all .goods_share{position: absolute;color: grey;right: 5%;top: 30%;text-align: center;font-size:24 rpx;}
.goods-wrap .goods_all .goods_share .share{font-size: 22rpx;margin-top: -12rpx}
.empty_block{height: 10px;background: #f9f9f9}
.goods-wrap .choose_goodSku{position: relative;}
.goods-wrap .sku_img{width: 75px;height: 75px}
.goods-wrap .sku_text{display: inline-block;vertical-align: top;margin-left: 10px}
.goods-wrap .all_sku{padding: 5px 5px 70px 5px;}
.goods-wrap .goodInfo_img{padding:0px 4px}
.goods-wrap .goodInfo_img image{width: 100%}
.goods-wrap .sku_text .sku_title{font-size: 11px;line-height: 40px}
.goods-wrap .sku_text .sku_price{font-size: 11px;line-height: 20px;color: red}
.goods-wrap .choose_num{font-size: 29rpx;float: left;margin-left: 5px}
.goods-wrap .goods_step{float: right;margin-right: 5px;margin-top: -3px}
.choose_all{padding: 8px 0px 4px 0px;border-top: 1px solid #cccccc}
.clear{clear: both}
.goods-wrap .add_wrap{position: absolute;bottom: 0;left: 0;width: 100%}
.goods-wrap .add_cart{height: 88rpx;line-height: 88rpx;text-align: center;background: #ff4444;width: 100%;font-size: 30rpx;color: white}
.goods-wrap .choose_color{height: 45px;line-height: 45px;font-size: 12px;text-indent: 5px}
.goods-wrap .choose_icon{display: inline-block;position: absolute;font-size: 28rpx;top: 40rpx;right: 5px}
.goods-wrap .goodInfo_text{height: 100rpx;line-height: 100rpx;text-align: center;font-size: 28rpx}
.goods-wrap .goods_nav{display: flex;width: 100%}
.goods-wrap .goods_nav .nav_one{flex: 1;font-size: 40rpx;height: 90rpx;line-height: 108rpx;text-align: center}
.goods-wrap .goods_nav .nav_two{flex: 1;font-size:40rpx;height: 90rpx;line-height: 108rpx;text-align: center}
.goods-wrap .goods_nav .nav_three{flex: 3;background: #ff976a;color: white;font-size: 12px;height: 90rpx;line-height: 90rpx;text-align: center}
.goods-wrap .goods_nav .nav_four{flex: 3;background: #ff4444;color: white;font-size: 12px;height: 90rpx;line-height: 90rpx;text-align: center}
.goods_nav_wrap{position: fixed;bottom: 0;width: 100%;background: white}
.spec-item {
  width: 100%;
  height: auto;
  overflow: hidden;
}

.spec-item .name {
  height: 32rpx;
  margin-bottom: 16rpx;
  font-size: 29rpx;
  color: #333;
}

.spec-item .values {
  height: auto;
  margin-bottom: 31.25rpx;
  font-size: 0;
}

.spec-item .value {
  display: inline-block;
  height: 56rpx;
  padding: 0 35rpx;
  line-height: 56rpx;
  text-align: center;
  margin-right: 25rpx;
  margin-bottom: 16.5rpx;
  border: 1px solid #979595;
  font-size: 25rpx;
  color: #5a5a5a;
}

.spec-item .value.disable {
  border: 1px solid #f8f7f7;
  color: #f8f7f7;
}

.spec-item .value.selected {
  border: 1px solid red;
  color: white;
  background: orange
}
.red{color: red}