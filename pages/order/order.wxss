/* pages/order/order.wxss */
page{height:100%;background: #f8f6f6}
.van-cell .valueColor{color: red}
.name{height:25px;line-height: 30px;font-size: 12px;text-indent: 8px}
.detail{height:25px;line-height: 20px;font-size: 12px;color: #cccccc;text-indent: 8px;border-bottom: 1px solid #f8f8f8;}
.empty{height: 10px;background: #f8f6f6}
.left_icon{height: 50px;line-height: 50px;text-align: center;color: red;}
.right_icon{height: 50px;line-height: 50px;text-align: center;border-bottom: 1px solid #f8f8f8;}
.newAddress{border-bottom: 1px dashed #cccccc;margin-top: 10px;background: white}
.order_list{padding-left: 15px;margin-top: 8px;background: white}
.order_list .order_title{height: 35px;line-height: 35px;font-size: 12px;border-bottom: 1px solid #f9f9f9}
.order_list .order_goods{display: flex;flex-direction: row;padding: 8px 0;border-bottom: 1px solid #f9f9f9}
.order_goods .pic{border: 1px solid #f9f9f9}
.order_goods .pic image{width: 70px}
.order_goods .dec{font-size: 12px;padding-left: 10px;line-height: 24px;} 
.order_goods .dec .dec_detail{color: #cccccc}
.order_goods .dec .price{color: red}
.order_goods .num{font-size: 12px;flex: 1;text-align: right;padding-right: 15px;margin-top: 35px}
.other{margin-top: 10px}
.order_bottom{line-height: 45px;width: 100%;position: fixed;bottom: 0;height: 45px;border-top: 1px solid #f9f9f9;background: white}
.order_bottom .price{color: red;padding-right: 15px;text-align: right;font-size: 12px;}
.order_bottom .order{background: red;color: white;text-align: center;font-size: 13px;}